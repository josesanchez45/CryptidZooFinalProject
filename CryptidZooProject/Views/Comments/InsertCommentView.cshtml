@model Comments

<h2>Create a New Comment</h2>

@using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
{
    <input asp-for="CommentId" type="hidden" value="" />

    <label asp-for="DisplayName" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Comment" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" />

    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var comm in Model.CommentIds)
            {
                <option value="@comm.CommentId">@comm.CommentId @comm.Name</option>
            }
        </select>
    </div>
    
    <input type="submit" value="Create Comment" class="btn btn-primary" />
}